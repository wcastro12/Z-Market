@model Z_Market.ViewModels.OrderView
@{
    ViewBag.Title = "New Order";
}

<h2>New Order</h2>
<h3>@ViewBag.Error</h3>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


        <div class="form-group">
            @Html.LabelFor(model => model.Custumer.CustumerId, "CustumerId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CustumerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Custumer.CustumerId, "", new { @class = "text-danger" })
            </div>
        </div>

         

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Order" class="btn btn-default" />
                @Html.ActionLink("Agregar Producto", "AddProduct", new { }, new { @clase = "btn btn-success", @style = "color:red" })
            </div>
           
        </div>
   
<h2>Order detais</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductOrder.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductOrder.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductOrder.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductOrder.Quantity)
                </th>

                <th></th>
            </tr>
            @for (int i = 0; i < Model.Productos.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Productos[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Productos[i].Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Productos[i].Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Productos[i].Quantity)
                    </td>
          
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Productos[i].ProductoId }) |
                        @Html.ActionLink("Details", "Details", new { id = Model.Productos[i].ProductoId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Productos[i].ProductoId })
                    </td>
                </tr>
            }

        </table>
}